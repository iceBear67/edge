{
  "Configuration": {
    "Appenders": {
      "Console": {
        "name": "CONSOLE",
        "PatternLayout": {
          "pattern": "%highlight{%d{MM-dd HH:mm:ss} %t [%p]} %highlight{%c{1}: %m%n}{INFO=WHITE}"
        }
      },
      "RollingFile": [
        {
          "name": "FILE",
          "fileName": "logs/app.log",
          "filePattern": "logs/app.%d{yyyy-MM-dd}.%i.log",
          "JsonTemplateLayout": {},
          "Policies": {
            "TimeBasedTriggeringPolicy": {}
          }
        }
      ]
    },
    "Loggers": {
      "Root": {
        "level": "INFO",
        "AppenderRef": [
          {
            "ref": "CONSOLE",
            "level": "INFO"
          },
          {
            "ref": "FILE",
            "level": "INFO"
          }
        ]
      }
    }
  }
}